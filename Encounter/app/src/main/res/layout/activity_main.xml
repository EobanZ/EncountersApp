<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:background="#515151"
    tools:context="com.veldro.encounter.MainActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/input_edit_text"
        android:textColor="@color/WHITE"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:textColorHint="@color/WHITE"
        android:hint="Insert Text"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/show_Button"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="32dp"
        android:text="show"/>

    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#515151"
        android:layout_gravity="center"
        >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"

        android:padding="0dp">

        <com.veldro.encounter.FontFitTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="#000000"
            android:textColor="#ffffff"
            android:layout_weight="1"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="8dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/info_textView"
            android:gravity="center"
            android:textSize="28sp"
            android:text="Info"/>

        <com.veldro.encounter.FontFitTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#ffffff"
            android:layout_marginRight="4dp"
            android:textSize="28sp"
            android:background="#00aced"
            android:layout_marginBottom="8dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/twitter_textView"
            android:text="Twitter"/>

        <com.veldro.encounter.FontFitTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="28sp"
            android:padding="16dp"
            android:background="#517fa4"
            android:textColor="#ffffff"
            android:maxLines="1"
            android:layout_marginRight="4dp"
            android:layout_gravity="center_horizontal"
            android:id="@+id/instagram_textView"
            android:text="Instagram"/>
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="0dp">

            <com.veldro.encounter.FontFitTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginBottom="8dp"
                android:background="#a20101"
                android:textColor="#ffffff"
                android:layout_gravity="center_horizontal"
                android:id="@+id/list_textView"
                android:textSize="28sp"
                android:text="List"/>

            <com.veldro.encounter.FontFitTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                android:gravity="center"
                android:background="#fffc00"
                android:id="@+id/snapchat_textView"
                android:layout_marginLeft="4dp"
                android:textSize="28sp"
                android:maxLines="1"
                android:textColor="#000000"
                android:layout_gravity="center_horizontal"
                android:padding="16dp"
                android:text="Snapchat"/>
            <com.veldro.encounter.FontFitTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:padding="16dp"
                android:layout_weight="1"
                android:layout_marginLeft="4dp"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:textColor="#ffffff"
                android:id="@+id/facebook_textView"
                android:background="#3b5998"
                android:textSize="28sp"
                android:text="Facebook"/>
        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center|bottom">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/scan_button"
        android:layout_marginTop="32dp"
        android:text="Scan"/>
    </LinearLayout>
</LinearLayout>
