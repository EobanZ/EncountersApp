<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#252525"
    tools:context="com.veldro.encounter.ListFullscreenActivity">


        <com.veldro.encounter.FontFitTextView
            android:id="@+id/fullscreenTop_FontFitTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="My Text"
            android:textColor="#ffffff"
            android:textSize="100sp"
            android:textStyle="bold" />




        <com.veldro.encounter.FontFitTextView
            android:id="@+id/fullscreenMiddle_FontFitTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="My Text"
            android:textColor="#ffffff"
            android:textSize="100sp"
            android:textStyle="bold" />




        <com.veldro.encounter.FontFitTextView
            android:id="@+id/fullscreenBottom_FontFitTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="My Text"
            android:textColor="#ffffff"
            android:textSize="100sp"
            android:textStyle="bold" />


</LinearLayout>